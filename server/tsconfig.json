{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDirs": ["."],
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"],
}
